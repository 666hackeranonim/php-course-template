{
  "image": "mcr.microsoft.com/devcontainers/php:1-8.2-bullseye",
  "features": {},
  "forwardPorts": [80],
  "portsAttributes": {
    "80": {
      "label": "Apache Web Server",
      "onAutoForward": "openPreview"
    }
  },
  "postCreateCommand": "chmod +x /workspaces/php-course-template/.devcontainer/setup.sh && sudo /workspaces/php-course-template/.devcontainer/setup.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php"
      }
    }
  }
}